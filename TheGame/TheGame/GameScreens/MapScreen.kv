#:kivy 1.8
#:import kivy kivy

<MapScreen>:
	canvas:
		Color:
			rgba: 1, 0.96, 0.85, 1
		Rectangle:
			pos: root.pos
			size: root.size

	DynImage:
		id: map

		source: "Images/map.png"
		size: (root.size[0] * 0.7, root.size[1] * 0.8)
		pos: (root.pos[0] + root.size[0] * 0.15, root.pos[1] + root.size[1] * 0.1)
		keep_ratio: False
		allow_stretch: True
		on_press: root.click()

	Image:
		id: room

		pos: root.pos
		size: root.size
		keep_ratio: False
		allow_stretch: True
		opacity: 0

	DialogWidget:
		id: dialog

		size: (root.size[0], root.size[1] * 0.2)
		pos: (root.pos[0], root.pos[1] - dialog.size[1])
		visible: False

	RoomTitle:
		id: roomLabel
		pos: (root.pos[0], root.size[1] - self.size[1])
		opacity: 0