#:kivy 1.8
#:import kivy kivy

<DeskScreen>:
	FloatLayout:
		DynImage:
			id: map

			source: "Images/desk.png"
			pos: root.pos
			size: root.size
			keep_ratio: False
			allow_stretch: True

		DialogWidget:
			id: dialog
			size: (root.width, root.height * 0.2)
			icon: "Images/Characters/profil-test.png"

        DynImage:
		    source: "Images/mini-map.png"
			pos: (root.size[0] - 150, root.size[1] - 150)
			size: ("100dp","100dp")
		    on_press: root.app.changeScreen("MapScreen")
		
		FloatLayout:
			id: ficheContainer
			size: root.size
			pos: root.pos

        DynImage:
            id: shadow
            pos: root.pos
			size: (0,0)
			opacity: 0.5
			on_press: root.hideNote()
			canvas:
				Color:
					rgba: 0, 0, 0, 1
				Rectangle:
					pos: self.pos
					size: shadow.size

		RstDocument:
			id: note
			background_color: [1, 1, 1, 1]
			pos: ((root.size[0] - root.size[1] * 0.566) / 2, root.size[1])
			size: (root.size[1] * 0.566, root.size[1] * 0.8)
			color: [0, 0, 0, 1]
			bar_width: "15px"
			index: 100
