#:kivy 1.8
#:import kivy kivy

<DeskScreen>:
	FloatLayout:
		DynImage:
			id: map

			source: "Images/desk.png"
			pos: root.pos
			size: root.size
			keep_ratio: False
			allow_stretch: True
			on_press: root.click()

		DialogWidget:
			id: dialog
			size: (root.width, root.height * 0.2)
			icon: "Images/profil-test.png"

		Button:
			id: connard
			on_press: root.test()

		RstDocument:
			id: note
			background_color: [1, 1, 1, 1]
			pos: ((root.size[0] - root.size[1] * 0.566) / 2, root.size[1])
			size: (root.size[1] * 0.566, root.size[1] * 0.8)
			color: [0, 0, 0, 1]
			bar_width: "15px"