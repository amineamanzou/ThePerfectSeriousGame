#:kivy 1.8
#:import kivy kivy

<DialogWidget>:
	canvas:
		Color:
			rgba: 0.89, 0.88, 0.93, 1
		Rectangle:
			pos: self.pos
			size: self.size

	Image:
		id: icon
		size: (root.height, root.height)
		pos: root.pos
		source: root.icon

	BoxLayout:
		id: elementContainer
		size: (root.size[0] - root.height, root.size[1])
		pos: (root.size[1], root.pos[1])