#:kivy 1.8
#:import kivy kivy

<DialogWidget>:
	canvas:
		Color:
			rgba: 0.89, 0.88, 0.93, 1
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		id: layout
		orientation: "horizontal"
		size: root.size
		pos: root.pos

		Image:
			id: icon
			size_hint: (.2, 1)
			size: (root.height, root.height)
			source: root.icon

		BoxLayout:
			id: layout_eval
			orientation: "vertical"
			size: ((root.size[0] - root.height), root.height - 20)
			pos: root.pos

			Label:
				text: "Ceci est un titre"
				size: (layout_eval.size[0], "5dp")
				size_hint: (1,0.3)
				color: 0, 0, 0, 1
				font_size: "18sp"

			GridLayout:
				cols: 2
				Button:
					id: answer1
					text: 'Answer 1'
					font_size: "18sp"

				Button:
					id: answer2
					text: 'Answer 2'
					font_size: "18sp"

				Button:
					id: answer3
					text: 'Answer 3'
					font_size: "18sp"

				Button:
					id: answer4
					text: 'Answer 4'
					font_size: "18sp"