#:kivy 1.8
#:import kivy kivy

<DialogWidget>:
	canvas:
		Color:
			rgba: 0.89, 0.88, 0.93, 1
		Rectangle:
			pos: self.pos
			size: self.size

	BoxLayout:
		id: layout
		orientation: "horizontal"
		size: root.size
		pos: root.pos

		Image:
			id: icon
			size_hint: (.2, 1)
			size: (root.height, root.height)
			source: root.icon

		DialogElement:
			id: elementContainer