#:kivy 1.8
#:import kivy kivy

<DialogWidget>:


	BoxLayout:
		id: layout
		orientation: "horizontal"
		size: root.size
		pos: root.pos

		Image:
			id: icon
			size_hint: (.2, 1)
			size: (root.height, root.height)
			source: root.icon

		DialogElement:
			canvas:
				Color:
					rgba: 1, 1, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size
			id: elementContainer