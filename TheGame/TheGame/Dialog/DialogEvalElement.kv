#:kivy 1.8
#:import kivy kivy

<DialogEvalElement>:
	canvas:
		Color:
			rgba: 0.89, 0.88, 0.93, 1
		Rectangle:
			pos: root.pos
			size: root.size

	BoxLayout:
		id: layoutEval
		orientation: "vertical"
		size: root.size
		pos: root.pos

		Label:
			id: labelEval
			size: (layoutEval.size[0], "5dp")
			size_hint: (1, 0.3)
			color: 0, 0, 0, 1

		GridLayout:
			id: layoutButtons
			cols: 2